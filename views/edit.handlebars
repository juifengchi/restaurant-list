<div class="container">
  <form action="/restaurants/{{restaurant._id}}/edit" method="POST">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="name">名稱</label>
        <input type="text" class="form-control" id="name" placeholder="name" name="name" value="{{restaurant.name}}">
      </div>
      <div class="form-group col-md-6">
        <label for="name_en">英文名稱</label>
        <input type="text" class="form-control" id="name_en" placeholder="name_en" name="name_en" value="{{restaurant.name_en}}">
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label for="category">類別</label>
        <input type="text" class="form-control" id="category" placeholder="category" name="category" value="{{restaurant.category}}">
      </div>
      <div class="form-group col-md-6">
        <label for="rating">評分</label>
        <input type="number" min="1" max="5" class="form-control" id="rating" placeholder="rating" name="rating" value="{{restaurant.rating}}">
      </div>
    </div>
    <div class="form-group">
      <label for="phone">電話</label>
      <input type="text" class="form-control" id="phone" placeholder="phone" name="phone" value="{{restaurant.phone}}">
    </div>
    <div class="form-group">
      <label for="image">圖片</label>
      <input type="text" class="form-control" id="image" placeholder="image (url)" name="image" value="{{restaurant.image}}">
    </div>
    <div class="form-group">
      <label for="location">地址</label>
      <input type="text" class="form-control" id="location" placeholder="location" name="location" value="{{restaurant.location}}">
    </div>
    <div class="form-group">
      <label for="google_map">Google Map</label>
      <input type="text" class="form-control" id="google_map" placeholder="google_map (url)" name="google_map" value="{{restaurant.google_map}}">
    </div>
    <div class="form-group">
      <label for="description">介紹</label>
      <textarea class="form-control" id="description" rows="3" placeholder="description" name="description" value="{{restaurant.description}}"></textarea>
    </div>

    <div class="d-flex justify-content-around align-items-center mb-1">
      <button type="submit" class="btn btn-primary">建立</button>
      <a class="btn btn-success" href="/" role="button">返回</a>
    </div>
  </form>
</div>